<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glavyin_oyna"
    android:gravity="center"
    tools:context=".StartActivity">

    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_margin="26dp"
        android:background="@drawable/info_btn"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        style="@style/PuzzleTitleStyleFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 Puzzle"
        android:textColor="#E9C9A6"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.633">

        <Button
            android:id="@+id/button1"
            style="@style/PuzzleTitleStyleFill"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/oyin_doskasi"
            android:clickable="true"
            android:focusable="true"
            android:text="3x3"
            android:textColor="#A15739"
            android:textSize="40dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/button2"
            style="@style/PuzzleTitleStyleFill"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/button1"
            android:background="@drawable/oyin_doskasi"
            android:clickable="true"
            android:focusable="true"
            android:text="4x4"
            android:textColor="#A15739"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            style="@style/PuzzleTitleStyleFill"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@id/button1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/oyin_doskasi"
            android:clickable="true"
            android:focusable="true"
            android:text="5x5"
            android:textColor="#A15739"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            style="@style/PuzzleTitleStyleFill"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@id/button2"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/button3"
            android:background="@drawable/oyin_doskasi"
            android:clickable="true"
            android:focusable="true"
            android:text="6x6"
            android:textColor="#A15739"
            android:textSize="40dp"
            android:textStyle="bold" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>