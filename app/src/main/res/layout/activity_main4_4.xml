<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glavyin_oyna"
    tools:context=".MainActivity4_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/game_group"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oyin_doskasi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.103">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.037"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.096" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/puzzle_15_title"
            style="@style/PuzzleTitleStyleFill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puzzle 16"
            android:textColor="#E9C9A6"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03" />

        <ImageButton
            android:id="@+id/sound_btn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="16dp"
            android:background="#00000000"
            android:src="@drawable/volume_on"
            app:layout_constraintBottom_toBottomOf="@id/puzzle_15_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/puzzle_15_title" />

        <ImageButton
            android:id="@+id/game_state_btn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_pause_24"
            app:layout_constraintBottom_toBottomOf="@id/puzzle_15_title"
            app:layout_constraintEnd_toStartOf="@id/sound_btn"
            app:layout_constraintTop_toTopOf="@id/puzzle_15_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/time_card"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/oyin_doskasi"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="#A15739"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_count_4_4"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="00:00"
                    android:textColor="#A15739"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/move_card"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/oyin_doskasi"
            android:padding="3dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Move"
                    android:textColor="#A15739"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step_count_4_4"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="0"
                    android:textColor="#A15739"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/oyin_doskasi"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.600">

            <RelativeLayout
                android:id="@+id/button_group_4_4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/images"
                android:padding="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btn1"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="0:0"
                    android:text="1"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/btn1"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="0:1"
                    android:text="2"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/btn2"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="0:2"
                    android:text="3"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn4"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@id/btn3"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="0:3"
                    android:text="4"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn1"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="1:0"
                    android:text="5"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn2"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/btn5"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="1:1"
                    android:text="6"
                    android:textColor="#A15739"
                    android:textSize="28sp" />


                <Button
                    android:id="@+id/btn7"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn3"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/btn6"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="1:2"
                    android:text="7"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn4"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/btn7"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="1:3"
                    android:text="8"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn5"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="2:0"
                    android:text="9"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn10"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn6"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/btn9"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="2:1"
                    android:text="10"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn11"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn7"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/btn10"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="2:2"
                    android:text="11"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn12"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn8"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/btn11"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="2:3"
                    android:text="12"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn13"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn9"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="3:0"
                    android:text="13"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn14"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn10"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/btn13"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="3:1"
                    android:text="14"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn15"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn11"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/btn14"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="3:2"
                    android:text="15"
                    android:textColor="#A15739"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn16"
                    style="@style/PuzzleTitleStyleFill"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_below="@id/btn12"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/btn15"
                    android:background="@drawable/oyin_doskasi"
                    android:tag="3:3"
                    android:text=""
                    android:textColor="#A15739"
                    android:textSize="28sp" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/pause_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/glavyin_oyna"
        android:elevation="20dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/PuzzleTitleStyleFill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Puzzle game is paused"
                android:textColor="#E9C9A6"
                android:textSize="40sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/continueBtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/oyin_doskasi">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/PuzzleTitleStyleFill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Continue"
                        android:textColor="#A15739"
                        android:textSize="24sp" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>